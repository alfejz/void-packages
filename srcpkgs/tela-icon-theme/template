# Template file for 'tela-icon-theme'
pkgname=tela-icon-theme
_yy=2025
_mm=02
_dd=10
version=${_yy}.${_mm}.${_dd}
revision=1
#archs="i686 x86_64"
#build_wrksrc=
metapackage=yes
#conf_files=""
#make_dirs="/var/log/dir 0755 root root"
hostmakedepends="gzip tar gtk-update-icon-cache"
makedepends=""
depends="tela-icon-theme-base tela-icon-theme-black tela-icon-theme-blue tela-icon-theme-brown tela-icon-theme-dracula tela-icon-theme-green 
         tela-icon-theme-grey tela-icon-theme-manjaro tela-icon-theme-nord tela-icon-theme-orange tela-icon-theme-pink tela-icon-theme-purple
         tela-icon-theme-red"
short_desc="A flat and colorful icon theme by vinceliuice"
maintainer="alfejz <alfredoejz@mailo.com>"
license="GPL-3.0-or-later"
homepage="https://github.com/vinceliuice/Tela-icon-theme"
changelog="https://github.com/vinceliuice/Tela-icon-theme/releases"
distfiles="https://github.com/vinceliuice/Tela-icon-theme/archive/refs/tags/${_yy}-${_mm}-${_dd}.tar.gz"
checksum=b1f3e76e307bd48b17f0bf55d2f5a7ce9f445b127f427e11f79a632a79e3cf4f

nostrip=yes
nodebug=yes
noverifyrdeps=yes
noshlibprovides=yes

do_extract() {
    cd ${wrksrc}
    cp "${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_yy}-${_mm}-${_dd}.tar.gz" "${wrksrc}/"
    tar -xzvf "${wrksrc}/${_yy}-${_mm}-${_dd}.tar.gz" "Tela-icon-theme-${_yy}-${_mm}-${_dd}/" \
        --strip-components=1
}

do_install() {
    vmkdir /usr/share/icons 755
    ${wrksrc}/install.sh -a -d "${DESTDIR}/usr/share/icons"
}

tela-icon-theme-base_package() {
	short_desc+=" - standard"
	pkg_install() {
		vmove "usr/share/icons/Tela"
		vmove "usr/share/icons/Tela-dark"
		vmove "usr/share/icons/Tela-light"
	}
}

