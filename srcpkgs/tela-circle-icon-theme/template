# Template file for 'tela-circle-icon-theme'
pkgname=tela-circle-icon-theme
_yy=2025
_mm=02
_dd=10
version=${_yy}.${_mm}.${_dd}
revision=1
#build_wrksrc=
metapackage=yes
#configure_args=""
#make_build_args=""
#make_install_args=""
#conf_files=""
#make_dirs="/var/log/dir 0755 root root"
hostmakedepends="gzip tar gtk-update-icon-cache"
makedepends=""
depends="tela-circle-icon-theme-base tela-circle-icon-theme-black tela-circle-icon-theme-blue tela-circle-icon-theme-brown tela-circle-icon-theme-dracula tela-circle-icon-theme-green 
         tela-circle-icon-theme-grey tela-circle-icon-theme-manjaro tela-circle-icon-theme-nord tela-circle-icon-theme-orange tela-circle-icon-theme-pink tela-circle-icon-theme-purple
         tela-circle-icon-theme-red"
short_desc="A flat,rounded and colorful icon theme by vinceliuice"
maintainer="alfejz <alfredoejz@mailo.com>"
license="GPL-3.0-or-later"
homepage="https://github.com/vinceliuice/Tela-circle-icon-theme"
changelog="https://github.com/vinceliuice/Tela-circle-icon-theme/releases"
distfiles="https://github.com/vinceliuice/Tela-circle-icon-theme/archive/refs/tags/${_yy}-${_mm}-${_dd}.tar.gz"
checksum=61dece3ab25711af9516565dd300d23b1c532fe69eac5cad42d2e9c57fa7c331

nostrip=yes
nodebug=yes
noverifyrdeps=yes
noshlibprovides=yes

do_extract() {
    cd ${wrksrc}
    cp "${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_yy}-${_mm}-${_dd}.tar.gz" "${wrksrc}/"
    tar -xzvf "${wrksrc}/${_yy}-${_mm}-${_dd}.tar.gz" "Tela-circle-icon-theme-${_yy}-${_mm}-${_dd}/" \
        --strip-components=1
}

do_install() {
    vmkdir /usr/share/icons 755
    ${wrksrc}/install.sh -a -d "${DESTDIR}/usr/share/icons"
}

tela-circle-icon-theme-base_package() {
	short_desc+=" - standard"
	pkg_install() {
		vmove "usr/share/icons/Tela-circle"
		vmove "usr/share/icons/Tela-circle-dark"
		vmove "usr/share/icons/Tela-circle-light"
	}
}

