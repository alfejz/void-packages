do_extract() {
    cd ${wrksrc}
    cp "${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_yy}-${_mm}-${_dd}.tar.gz" "${wrksrc}/"
    tar -xzvf "${wrksrc}/${_yy}-${_mm}-${_dd}.tar.gz" "Tela-circle-icon-theme-${_yy}-${_mm}-${_dd}/" \
        --strip-components=1
}

do_install() {
    vmkdir /usr/share/icons 755
    ${wrksrc}/install.sh -a -d "${DESTDIR}/usr/share/icons"
}
